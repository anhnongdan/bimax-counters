def do_flush(cache_val):
    pp = rd.pipeline()
    for kk in cache_val:
         vv = float(cache_val[kk])
         type,name = kk.split("###")
         pp.hincrbyfloat(type, name, vv)
    pp.execute()

def do_count(tqueue):
    cache_val = {}
    for tval in tqueue:
        kk = "%s###%s" %(tval['type'], tval['name'])
        if kk in cache_val:
            cache_val[kk] = cache_val[kk] + float(tval['val'])
        else:
            cache_val[kk] = float(tval['val'])
    do_flush(cache_val)


